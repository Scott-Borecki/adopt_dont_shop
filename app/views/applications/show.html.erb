<p>
  Name: <%= @application.name %><br>
  Address: <%= @application.street_address %><br>
  City: <%= @application.city %><br>
  State: <%= @application.state %><br>
  Zip Code: <%= @application.zip_code %><br>
  Description: <%= @application.description %><br>
  Pets: <% @application.pets.each do |pet| %>
    <%= link_to pet.name, "/pets/#{pet.id}" %>
  <% end %><br>
  Application Status: <%= @application.status %>
  <% if @application.status == 'In Progress' %>
    <h3>Add a Pet to this Application</h3>
    <%= form_with url: "/applications/#{@application.id}", method: :get, local: true do |f| %>
      <%= f.label :search_name, 'Search for Pet by Name' %>
      <%= @name = f.text_field :search_name %>

      <%= f.submit 'Submit'  %>
    <% end %>
    <% if @pets.is_a?(Array) %>
      <p><%= "Search Results:" %></p>
      <% @pets.each do |pet| %>
        <%= link_to "#{pet.name}", "/pets/#{pet.id}" %><br>
      <% end %>
    <% end %>
  <% end %>
</p>
