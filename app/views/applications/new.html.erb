<h1>New Application</h1>
<%= form_with url: '/applications', method: :post, local: true do |f| %>
  <%= f.label :name, "Name:" %>
  <%= f.text_field :name %>

  <%= f.label :street_address, "Street Address:" %>
  <%= f.text_field :street_address %>

  <%= f.label :city, "City:" %>
  <%= f.text_field :city %>

  <%= f.label :state, "State:" %>
  <%= f.text_field :state %>

  <%= f.label :zip_code, "Zip Code:" %>
  <%= f.text_field :zip_code, maxlength: 5 %>

  <%= f.label :description, "Describe why you would make a good home for pet(s):" %>
  <%= f.text_field :description %>

  <%= f.hidden_field :status, value: "In Progress" %>

  <%= f.submit 'Submit' %>
<% end %>
