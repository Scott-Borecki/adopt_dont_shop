<h2>Application Details:</h2>
<p id='application' class='indent'>
  Name: <%= @application.name %><br>
  Address: <%= @application.street_address %><br>
  City: <%= @application.city %><br>
  State: <%= @application.state %><br>
  Zip Code: <%= @application.zip_code %><br>
  Description: <%= @application.description %><br>
  Pets: <% @application.pets.each do |pet| %>
          <%= link_to pet.name, "/pets/#{pet.id}" %>
        <% end %><br>
  Application Status: <%= @application.status %>
</p>

<h2>Pets for Approval:</h2>
<% @application.pets.each do |pet| %>
  <section id='pet-<%= pet.id %>' class='container indent'>
    <%= link_to pet.name, "/pets/#{pet.id}", class: 'item-title' %>
    <% if @application.pet_approved?(pet) %>
      <div class='item-button'>Approved</div>
    <% elsif @application.pet_rejected?(pet) %>
      <div class='item-button'>Rejected</div>
    <% elsif pet.adoptable == false %>
      <div class='item-button'>This pet has been approved for adoption in another application</div>
      <%= button_to 'Reject', "/admin/applications/#{@application.id}/#{pet.id}/reject", method: :patch, class: 'item-button' %>
    <% else %>
      <%= button_to 'Approve', "/admin/applications/#{@application.id}/#{pet.id}/approve", method: :patch, class: 'item-button' %>
      <%= button_to 'Reject', "/admin/applications/#{@application.id}/#{pet.id}/reject", method: :patch, class: 'item-button' %>
    <% end %>
    <br><br>
  </section>
<% end %>
